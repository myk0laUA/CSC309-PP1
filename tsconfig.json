{
  "compilerOptions": {
    
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "pages/api/blogPost/[id].js", "pages/api/protected/authorization.js", "pages/my-templates/edit/[id].jsx", "pages/comment.jsx", "pages/blog-posts.jsx", "pages/templates/index.jsx", "pages/templates/[id].jsx", "pages/my-templates/index.jsx", "components/CodeEditor.jsx", "components/LanguageSelector.jsx", "components/SaveTemplateButton.jsx", "components/TemplateCard.jsx", "components/Layout.jsx", "pages/editor.jsx", "pages/create-post.tsx", "pages/edit-post/[id].jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
